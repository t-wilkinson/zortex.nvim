{
  "compileOnSave": true,
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "isolatedModules": true,

    "paths": {},
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "lib",

    "allowJs": true,
    "checkJs": true,

    "composite": false,
    "incremental": false,
    "declaration": false
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.js"
  ],
  "exclude": [
    "./lib",
    "node_modules/**/*"
  ]
}
